// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets   = ["native", "linux-musl"]
}

model AboutPage {
  version     Int      @default(autoincrement()) @id
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  links       Link[]
  pictureURL  String
  bio         String
  title       String
}

model Link {
  id                        String @default(uuid()) @id
  name                      String
  url                       String
  aboutPage                 AboutPage @relation(fields: [pageVersionThatReference], references: [version])
  pageVersionThatReference  Int
}

model PostsPage {
  version     Int      @default(autoincrement()) @id
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  summary     String
  posts       Post[]
}

model Post {
  id                        String @default(uuid()) @id
  url                       String
  originalPublishDate       DateTime
  title                     String
  snippet                   String
  postsPage                 PostsPage @relation(fields: [pageVersionThatReference], references: [version])
  pageVersionThatReference  Int
}

model ProjectsPage {
  version     Int      @default(autoincrement()) @id
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  summary     String
  projects    Project[]
}

model Project {
  id                        String @default(uuid()) @id
  name                      String
  originalPublishDate       DateTime
  description               String
  summary                   String
  appUrl                    String
  sourceUrl                 String
  projectsPage              ProjectsPage @relation(fields: [pageVersionThatReference], references: [version])
  pageVersionThatReference  Int
}

model Account {
  id          String @default(uuid()) @id
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  username    String
  password    String
  isActive    Boolean
  lastLoginAt DateTime
}